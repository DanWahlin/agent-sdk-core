{
  "name": "@codewithdan/agent-sdk-core",
  "version": "0.1.1",
  "description": "Shared foundation for AI coding agent SDK integration (Copilot, Claude Code, Codex)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js"
    },
    "./ws": {
      "types": "./dist/ws/index.d.ts",
      "import": "./dist/ws/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "node --import tsx/esm --test tests/types.test.ts tests/tool-classification.test.ts tests/progress.test.ts tests/ws-client.test.ts tests/ws-server.test.ts",
    "test:e2e": "node --import tsx/esm --test tests/e2e.test.ts",
    "test:all": "node --import tsx/esm --test tests/*.test.ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.0",
    "@github/copilot-sdk": "^0.1.0",
    "@openai/codex-sdk": ">=0.80.0",
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@github/copilot-sdk": {
      "optional": true
    },
    "@anthropic-ai/claude-agent-sdk": {
      "optional": true
    },
    "@openai/codex-sdk": {
      "optional": true
    },
    "ws": {
      "optional": true
    }
  },
  "dependencies": {
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "@github/copilot-sdk": "^0.1.25",
    "@openai/codex-sdk": "^0.104.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "tsx": "^4.21.0",
    "typescript": "~5.7.0",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DanWahlin/agent-sdk-core"
  },
  "license": "MIT"
}
